<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="com.kresshy.weatherstation.fragment.BluetoothDeviceListFragment">

    <TextView
        android:id="@+id/text_select_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="10dip"
        android:text="Please select your weather station"
        android:textSize="20dip"
        android:gravity="center"
        android:textColor="@color/accent_material_light"
        android:textStyle="italic|bold" />

    <ListView
        android:id="@+id/listview_bluetooth_devices"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        android:layout_below="@id/text_select_timer" />

</RelativeLayout>
